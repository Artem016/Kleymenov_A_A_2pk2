<Window x:Class="RepairRequests2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairRequests2"
        mc:Ignorable="d"
        MaxHeight="450" MinHeight="450" MaxWidth="800" MinWidth="800"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddRequest" Height="100" Width="100" Click="AddRequest_Click" 
                FontWeight = "ExtraBold"  
                RenderTransformOrigin="0.483,1.517" Margin="654,287,46,47">
            <Image Source="Images/AddRequestImage.png"></Image>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--Создание кнопким с именем и размерами-->
    </Grid>
</Window>
